<!ELEMENT node (root, rsync, role+, description?)>
<!ATTLIST node
  id       ID     #REQUIRED
  group    CDATA  #IMPLIED
  is_root  (0|1)  "0"
  host     CDATA  #IMPLIED
>

<!ELEMENT root EMPTY>
<!ATTLIST root
  host  CDATA  #REQUIRED
  port  CDATA  #REQUIRED
>

<!ELEMENT rsync EMPTY>
<!ATTLIST rsync
  user  CDATA  #REQUIRED
>

<!-- N.B. Ideally, only roles of type subscribe should be allowed to define a
     filter... -->
<!ELEMENT role (directory, filter?, description?)>
<!ATTLIST role
  type    (publish|subscribe)    #REQUIRED
  route   (rootward|leafward)  #REQUIRED
  active  (0|1)  "1"
>

<!ELEMENT description (#PCDATA)>

<!ELEMENT directory EMPTY>
<!ATTLIST directory
  path  CDATA  #REQUIRED
>

<!ELEMENT filter EMPTY>
<!ATTLIST filter
  type   (node|group)   #REQUIRED
  value  CDATA          #REQUIRED
  rule   (match|exact)  "exact"
>
